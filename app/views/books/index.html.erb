<h1>Books</h1>
<% @books.each do |book| %>


	<table>
		<thread>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thread>
		<tbody>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "show", book_path(book.id), :class => "詳細" %></td>
				<td><%= link_to "edit", edit_book_path(book.id), :class => "編集" %></td>
				<td><%= link_to "destroy", book_path(book.id), method: :delete, :class => "削除" %> </td>
			</tr>
		</tbody>
	</table>
<% end %>

<%= render 'new' %>





