<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<div class="field">
		<label for = "book_title">Title</label>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<label for = "book_body">Body</label>
		<%= f.text_field :body %>
	</div>
	<div class="action">
		<%= f.submit 'Update Book' %>
	</div>
<% end %>

	<%= link_to "Show", book_path(@book.id), class: "Show_#{@book.id}" %>
	|
	<%= link_to "Back", books_path, class: "Back" %>

